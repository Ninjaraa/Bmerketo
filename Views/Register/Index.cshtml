@model UserSignUpViewModel
@{
    ViewData["Title"] = "Register your account";
}

<section class="registerform">
    <div class="container">
        <h1>Please register your account</h1>

        <form method="post" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FirstName">First name*</label>
                    <input asp-for="FirstName" class="form-control" autocomplete="off" onkeyup="validateTextInputField(event)" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LastName">Last name*</label>
                    <input asp-for="LastName" class="form-control" autocomplete="off" onkeyup="validateTextInputField(event)" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="StreetName" class="form-label">Street Name*</label>
                <input asp-for="StreetName" class="form-control" autocomplete="off" onkeyup="validateTextInputField(event)" />
                <span asp-validation-for="StreetName" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PostalCode" class="form-label">Postal Code*</label>
                    <input asp-for="PostalCode" class="form-control" autocomplete="off" onkeyup="validateTextInputField(event)" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="City" class="form-label">City*</label>
                    <input asp-for="City" class="form-control" autocomplete="off" onkeyup="validateTextInputField(event)" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number (optional)</label>
                    <input asp-for="PhoneNumber" class="form-control" autocomplete="off" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Company" class="form-label">Company (optional)</label>
                    <input asp-for="Company" class="form-control" autocomplete="off" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email*</label>
                <input asp-for="Email" class="form-control" autocomplete="off" onkeyup="validateEmailInputField(event)" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password*</label>
                <input asp-for="Password" id="Password" class="form-control" autocomplete="off" onkeyup="validatePasswordInputField(event)" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password*</label>
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="off" onkeyup="validatePasswordConfirmInputField(event)" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ProfileImage"></label>
                <input asp-for="ProfileImage" type="file" class="form-control-file" />
            </div>
            <div class="form-check">
                <label asp-for="AgreeToTerms" class="form-check-label">I have read and accept the terms and agreements*</label>
                <input asp-for="AgreeToTerms" type="checkbox" class="form-check-input" required />
                <span asp-validation-for="AgreeToTerms" class="text-danger"></span>
            </div>

            <hr class="mb-4">

            <button type="submit" class="btn-theme">Submit</button>
        </form>
    </div>
</section>