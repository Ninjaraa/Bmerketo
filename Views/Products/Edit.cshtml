@model ProductEditViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<section class="registerform">
    <div class="container">

        <h1>Edit product with SKU: @Model.SKU</h1>

        <form asp-controller="Products" asp-action="Edit" method="post" enctype="multipart/form-data">

            <div class="col-md-6 mb-3">
                <label asp-for="ProductName" class="form-label">Product Name*</label>
                <input asp-for="ProductName" class="form-control" autocomplete="off" />
                <small class="text-danger"><span asp-validation-for="ProductName"></span></small>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control" autocomplete="off" />
                <small class="text-danger"><span asp-validation-for="Description"></span></small>
            </div>
            <div class="col-md-6 mb-3">
                <label for="Tags">Tags</label>
                <div>
                    @foreach (var tag in Model.Tags)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="tag-@tag" name="tags" value="@tag">
                            <label class="form-check-label" for="tag-@tag">
                                @tag
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Category" class="form-label">Product Category*</label>
                <input asp-for="Category" class="form-control" autocomplete="off" />
                <small class="text-danger"><span asp-validation-for="Category"></span></small>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="OrdinaryPrice" class="form-label">Ordinary Price</label>
                <input asp-for="OrdinaryPrice" class="form-control" autocomplete="off" />
                <small class="text-danger"><span asp-validation-for="OrdinaryPrice"></span></small>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="OriginalPrice" class="form-label">Original Price</label>
                <input asp-for="OriginalPrice" class="form-control" autocomplete="off" />
                <small class="text-danger"><span asp-validation-for="OriginalPrice"></span></small>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="DiscountPrice" class="form-label">Discount Price</label>
                <input asp-for="DiscountPrice" class="form-control" autocomplete="off" />
                <small class="text-danger"><span asp-validation-for="DiscountPrice"></span></small>
            </div>
            <div class="row">
                <div class="mb-3">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" type="file" class="form-control-file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <hr class="mb-4">
            <button type="submit" class="btn-theme">Submit</button>
        </form>
    </div>
</section>