@model ProductRegistrationViewModel

@{
    ViewData["Title"] = "Register Product";
}

<section class="registerform">
    <div class="container">
        <h1>Add new product</h1>

        <form method="post" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-6 mb-3">
                <label asp-for="ProductName"></label>
                <input asp-for="ProductName" class="form-control" onkeydown="validateForm()" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label for="Tags">Tags</label>
                <div>
                    @foreach (var tag in Model.Tags)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="tag-@tag" name="tags" value="@tag" @(Model.Tags.Contains(tag) ? "checked" : "")>
                            <label class="form-check-label" for="tag-@tag">
                                @tag
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Category"></label>
                <input asp-for="Category" class="form-control" onkeydown="validateForm()" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="OrdinaryPrice"></label>
                <input asp-for="OrdinaryPrice" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="OriginalPrice"></label>
                <input asp-for="OriginalPrice" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="DiscountPrice"></label>
                <input asp-for="DiscountPrice" class="form-control" />
            </div>
            <div class="row">
                <div class="mb-3">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" type="file" class="form-control-file" />
                </div>
            </div>
            <hr class="mb-4">
            <button type="submit" class="btn-theme">Submit</button>
        </form>
    </div>
</section>