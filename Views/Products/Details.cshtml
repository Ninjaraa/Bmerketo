<section class="related-products">
    <div class="container">
        @if (Model.ProductItems.FirstOrDefault()?.RelatedProducts.Count > 0)
        {
            <h1>Related products</h1>
            <div class="related-items">
                @foreach (var relatedProduct in Model.ProductItems.FirstOrDefault()?.RelatedProducts)
                {
                    <div id="related-product-item">
                        <img src="data:@(relatedProduct.ImageMimeType);base64,@(Convert.ToBase64String(relatedProduct.ImageData))" alt="@relatedProduct.ProductName" />
                    </div>
                }
            </div>
        }
    </div>
</section>

<section class="additional-products">
    <div class="container">
        <div class="additional-items">
            @foreach (var relatedProduct in Model.ProductItems.FirstOrDefault()?.RelatedProducts)
            {
                <div id="additional-product-item">
                    <img src="data:@(relatedProduct.ImageMimeType);base64,@(Convert.ToBase64String(relatedProduct.ImageData))" alt="@relatedProduct.ProductName" />
                </div>
            }
        </div>
    </div>
</section>