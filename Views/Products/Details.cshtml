@model ProductDetailsViewModel

@{
    ViewData["Title"] = "Products";
}

<section class="product-details-section">
    <div class="container">
        @foreach (var product in Model.ProductItems)
        {
            <div class="product-details-grid">
                <div id="product-item-1"> <img src="data:@(product.ImageMimeType);base64,@(product.ImageBase64)" alt="Product" /></div>
                <div id="product-item-2"> <img src="/images/placeholders/120x113.svg" alt="Product" /></div>
                <div id="product-item-3"> <img src="/images/placeholders/120x113.svg" alt="Product" /></div>
                <div id="product-item-4"> <img src="/images/placeholders/120x113.svg" alt="Product" /></div>
                <div id="product-item-5"> <img src="/images/placeholders/120x113.svg" alt="Product" /></div>
                <div id="product-item-6">
                    <div class="product-details">
                        <div class="product-title">
                            <h1>@product.ProductName</h1>
                            <div class="product-description">
                                Discovered had get considered projection who favourable. Necessary up knowledge it
                                tolerably.
                                Unwilling departure education is be dashwoods or an. Use off agreeable law unwilling sir
                                deficient curiosity instantly. (<a href="/">read more</a>)
                            </div>
                            <div class="product-rating">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <p class="reviews">16 reviews</p>
                            </div>

                            <div class="product-price">
                                <div class="card-text">
                                    @if (product.Price?.DiscountPrice != null)
                                    {
                                        <span class="discounted-price">@product.Price.DiscountPrice</span>
                                    }

                                    @if (product.Price?.OriginalPrice != null)
                                    {
                                        <span class="original-price">@product.Price.OriginalPrice</span>
                                    }

                                    @if (product.Price?.OrdinaryPrice != null)
                                    {
                                        <span class="ordinary-price">@product.Price.OrdinaryPrice</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="quantity-selector">
                            <div class="qty-info-quantity-box">
                                <button class="qty-decr">
                                    -
                                </button>
                                <span class="return-qty">1</span>
                                <button class="qty-incr">
                                    +
                                </button>
                            </div>
                            <button class="add-cart-btn">Add to cart <i class="fa-solid fa-cart-shopping"></i></button>
                        </div>
                        <div class="sku-info">
                            <div class="circle red"></div>
                            <div class="circle green"></div>
                            <div class="circle yellow"></div>
                            <p class="sku">SKU: @product.SKU</p>
                        </div>
                        <button class="add-wishlist-btn">Add to wishlist</button>
                        <p class="category">Category: @product.Category.Category</p>
                    </div>
                </div>
            </div>
        }

    </div>
</section>

